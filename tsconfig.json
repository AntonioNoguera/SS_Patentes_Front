{
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@pages/*": ["src/lib/pages/*"], 
      "@components/*": ["src/lib/components/*"],
      "@shared/*": ["src/lib/pages/shared/*"],
      "@services/*": ["src/lib/api/services/*"],
    },
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
